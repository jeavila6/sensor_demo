<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewAzimuthLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/azimuth"
        app:layout_constraintEnd_toStartOf="@+id/textViewAzimuth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewAzimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        tools:text="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAzimuthLabel"
        app:layout_constraintStart_toEndOf="@+id/textViewAzimuthLabel" />

    <TextView
        android:id="@+id/textViewPitchLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/pitch"
        app:layout_constraintStart_toStartOf="@+id/textViewAzimuthLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewAzimuthLabel" />

    <TextView
        android:id="@+id/textViewPitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/textViewPitchLabel"
        app:layout_constraintEnd_toEndOf="@+id/textViewAzimuth" />

    <TextView
        android:id="@+id/textViewRollLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/roll"
        app:layout_constraintStart_toStartOf="@+id/textViewPitchLabel"
        app:layout_constraintTop_toBottomOf="@+id/textViewPitchLabel" />

    <TextView
        android:id="@+id/textViewRoll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="0.0"
        app:layout_constraintBottom_toBottomOf="@+id/textViewRollLabel"
        app:layout_constraintEnd_toEndOf="@+id/textViewPitch" />
</android.support.constraint.ConstraintLayout>